<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Split -->
    <View
        android:id="@+id/top_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#82B5E2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5" />

    <View
        android:id="@+id/bottom_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/top_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Form Guideline for positioning -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/form_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/form_top_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:orientation="vertical"
            android:background="@drawable/form_card_bg"
            android:elevation="12dp"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="@string/Register"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- Input Fields -->
            <EditText
                android:id="@+id/et_school_name"
                style="@style/FormEditText"
                android:hint="@string/School_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_city"
                style="@style/FormEditText"
                android:hint="@string/hint_city"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_address"
                style="@style/FormEditText"
                android:hint="@string/hint_address"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_mobile_number"
                style="@style/FormEditText"
                android:hint="@string/hint_mobile_number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/et_school_email"
                style="@style/FormEditText"
                android:hint="@string/hint_school_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_password"
                style="@style/FormEditText"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/FormEditText"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword" />

            <!-- Password Error -->
            <TextView
                android:id="@+id/tv_password_match_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/password_mismatch_error"
                android:textColor="#FF0000"
                android:visibility="gone" />

            <!-- Image preview - initially hidden -->
            <ImageView
                android:id="@+id/iv_selected_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="selected photo preview"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Upload school logo"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2196F3"
                android:padding="14dp"
                android:text="@string/btn_register"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
