<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background: Top Blue, Bottom White -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#82B5E2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable Form that overlaps the top -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/form_card_bg"
            android:clipToPadding="false"
            android:elevation="12dp"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:text="@string/Register"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />


            <RadioGroup
                android:id="@+id/rgInstitutionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSchool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/School_name" />

                <RadioButton
                    android:id="@+id/rbCollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/college" />
            </RadioGroup>

            <!-- All Fields -->
            <EditText
                android:id="@+id/et_school_name"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/School_name"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_city"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/hint_city"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_address"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/hint_address"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_mobile_number"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/hint_mobile_number"
                android:inputType="phone" />

            <EditText
                android:id="@+id/et_school_email"
                style="@style/FormEditText"
                android:autofillHints="Email"
                android:hint="@string/hint_school_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/et_password"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/hint_password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/et_confirm_password"
                style="@style/FormEditText"
                android:autofillHints=""
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword" />

            <!-- Password Error -->
            <TextView
                android:id="@+id/tv_password_match_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/password_mismatch_error"
                android:textColor="#FF0000"
                android:visibility="gone" />

            <!-- Button -->
            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2196F3"
                android:padding="14dp"
                android:text="@string/btn_register"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
