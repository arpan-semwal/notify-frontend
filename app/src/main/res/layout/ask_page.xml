<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Company Logo -->
        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:src="@drawable/softmaart"/>

        <!-- Register Heading -->
        <TextView
            android:id="@+id/tv_register_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Now"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp" />

        <!-- School Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_school"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/askPage_card_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/school"
                    android:contentDescription="School Icon"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_school_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="School"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Student Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_student"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="8dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_gravity="center"
            card_view:cardBackgroundColor="@color/askPage_card_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/student"
                    android:contentDescription="Student Icon"
                    android:layout_marginBottom="8dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_student_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
