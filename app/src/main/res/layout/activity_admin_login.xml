<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background split: Top Blue / Bottom White -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#82B5E2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Scrollable form card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:fillViewport="true"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/form_card_bg"
            android:elevation="12dp"
            android:layout_marginBottom="32dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/admin_login"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- âœ… Important: Use dropdownStyle -->
            <AutoCompleteTextView
                android:id="@+id/et_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="School Name"
                android:inputType="text"
                android:textColor="#000000"
            android:dropDownHeight="wrap_content"
            />


            <!-- Password -->
            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:layout_marginTop="12dp" />

            <!-- Login -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#2196F3"
                android:text="@string/login_heading"
                android:textColor="@android:color/white"
                android:padding="14dp"
                android:textSize="16sp" />

            <!-- Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#D3D3D3" />

            <!-- Register -->
            <TextView
                android:id="@+id/tv_register_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_not_register_text"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
