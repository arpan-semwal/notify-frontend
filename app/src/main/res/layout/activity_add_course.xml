<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <!-- Course Name Input -->
    <AutoCompleteTextView
        android:id="@+id/et_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Name"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@android:color/black"
        android:singleLine="true"/>

    <!-- TextView to Display Selected Courses -->
    <TextView
        android:id="@+id/tv_selected_courses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected Courses: "
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"/>

    <!-- Add Course Button -->
    <Button
        android:id="@+id/btn_add_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Course"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"/>

    <!-- Horizontal Layout for Next and Skip Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <!-- Skip Button (Aligned Left) -->
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"/>

        <!-- Next Button (Aligned Right) -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="regsiter"
            android:padding="12dp"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</LinearLayout>
